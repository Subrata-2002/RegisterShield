</head>

<body>
    <% if(messages.error) { %>
        <div class="alert alert-danger" style="text-align: center;">
            <%=messages.error%>
        </div>
        <% } %>
            <% if(messages.success) { %>
                <div class="alert alert-success" style="text-align: center;">
                    <%=messages.success%>
                </div>
                <% } else {%>
                    <div class="form">
                        <div class="form-toggle"></div>
                        <div class="form-panel one">
                            <div class="form-header">
                                <h1>Register Account</h1>
                            </div>

                            <form method="post" action="/insert">
                                <div class="form-group">
                                    <label for="username">Username</label>
                                    <input class="form-control" type="text" name="username">
                                </div>
                                <div class="form-group mspace">
                                    <label>Email
                                        <input class="form-control" type="email" name="email">
                                    </label>
                                    <label for="cpassword">Mobile
                                        <input class="form-control" type="number" name="mobile">
                                    </label>
                                </div>


                                <div class="form-group">
                                    <label for="password">Address</label>
                                    <input class="form-control" type="text" name="add">
                                </div>
                                <div class="form-group mspace">
                                    <label for="email">Password
                                        <input class="form-control" type="number" name="password">
                                    </label>
                                    <label for="email">Confirm Password
                                        <input class="form-control" type="number" name="confirmpassword">
                                    </label>
                                </div>

                                Select Gender : &nbsp;&nbsp; <div class="form-check form-check-inline">
                                    <input class="form-check-input" type="radio" name="gender" value="male">
                                    <label class="form-check-label" for="inlineRadio1">Male</label>
                                </div>
                                <div class="form-check form-check-inline">
                                    <input class="form-check-input" type="radio" name="gender" value="female">
                                    <label class="form-check-label" for="inlineRadio2">Female</label>
                                </div>

                                <!-- Male <input type="radio" value="male"> -->
                                <div class="form-group">
                                    <input class="form-control" type="submit" value="Register">
                                </div>
                            </form>

                        </div>
                    </div>
                    <% } %>

</body>

</html>